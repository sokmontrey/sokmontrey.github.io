---
const { entry } = Astro.props;
const { title, description, thumbnail, thumbnail_hover, url } = entry.data;
---

<div class="py-2 ">
    <h2 class="serif-font h1">
        <a href={url} target="_blank" class="group hover:text-[var(--pm-color)]">
            {title} <i class="fa-solid fa-arrow-up-right-from-square group-hover:text-[var(--pm-color)] text-sm group-hover:pl-1 transition-all duration-200"></i>
        </a>
    </h2>
    <p class="sans-font">
    <!--md:w-[70%] lg:w-[40%]  ">-->
        {description}
    </p>
    <div class="thumbnail-container">
        {thumbnail &&
            <img
                src={thumbnail}
                alt={title}
                class={"mx-auto my-10 w-[60%] h-[auto] object-cover" + (thumbnail_hover ? "thumbnail-img" : "")}
            /> }
        {thumbnail_hover &&
            <img
                src={thumbnail_hover}
                alt={title}
                class={"mx-auto my-10 w-[60%] h-[auto] object-cover" + (thumbnail_hover ? "thumbnail-hover-img" : "")}
            /> }
    </div>
    <!--<p class="mono-font lt2-color">-->
    <!--    [{tags.join(', ')}]-->
    <!--</p>-->
</div>

<style>
    .thumbnail-img {
        filter: brightness(0.5);
    }

    .thumbnail-hover-img {
        filter: brightness(1.5);
    }

    .thumbnail-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .thumbnail-container:hover .thumbnail-img {
        filter: brightness(1.5);
    }

    .thumbnail-container:hover .thumbnail-hover-img {
        filter: brightness(0.5);
    }
</style>